# URL regex
##################################################################

$regex=<<EOM;
s?
	(?:https?|ftp|news)
://[-_.!~*'a-zA-Z0-9;/?:@&=+$,%#]+
EOM

$regex=~s/[\r\n\t\s]//g;
print $regex;
z
